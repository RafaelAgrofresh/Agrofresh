# /etc/systemd/system/agrofresh-app.service
# systemctl enable docker
# systemctl enable agrofresh-app
# systemctl start agrofresh-app

[Unit]
Description=Agrofresh Application Service
Requires=docker.service
After=docker.service

[Service]
WorkingDirectory=/home/pi/agrofresh
ExecStart=/usr/bin/docker-compose up
ExecStop=/usr/bin/docker-compose down
TimeoutStartSec=0
Restart=on-failure
StartLimitIntervalSec=60
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
